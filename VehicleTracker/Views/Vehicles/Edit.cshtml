@model VehicleTracker.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="VehicleID" />
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label">Vehicle Type</label>
            <div class="col-md-10">
                @*<select asp-for="Type" asp-items="Html.GetEnumSelectList<Vehicle.VehicleType>()" class="form-control"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>*@
                @Html.DisplayFor(Vehicle => Vehicle.Type)
                @Html.HiddenFor(Vehicle => Vehicle.Type)
            </div>

        </div>
        <div class="form-group">
            <label asp-for="GasAmount" class="col-md-2 control-label">Amount of Gas</label>
            <div class="col-md-10">
                <input asp-for="GasAmount" class="form-control" />
                <span asp-validation-for="GasAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TiresNum" class="col-md-2 control-label">Number of Tires</label>
            <div class="col-md-10">
                @*<input asp-for="TiresNum" class="form-control" />
                <span asp-validation-for="TiresNum" class="text-danger"></span>*@
                @Html.DisplayFor(Vehicle => Vehicle.TiresNum)
                @Html.HiddenFor(Vehicle => Vehicle.TiresNum)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
