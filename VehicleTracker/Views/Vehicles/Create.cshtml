@model VehicleTracker.Models.Vehicle


<h2>Create</h2>
<p>Create a new vehicle using this form.  Note: The number of tires will not be able to be changed after the vehicle is created.</p>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label">Vehicle Type</label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<Vehicle.VehicleType>()" class="form-control"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
</div>
        </div>
        <div class="form-group">
            <label asp-for="GasAmount" class="col-md-2 control-label">Amount of Gas (Gallons)</label>
            <div class="col-md-10">
                <input asp-for="GasAmount" class="form-control" />
                <span asp-validation-for="GasAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TiresNum" class="col-md-2 control-label">Number of Tires</label>
            <div class="col-md-10">
                <input asp-for="TiresNum" class="form-control" />
                <span asp-validation-for="TiresNum" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
